@page
@model RentMate.Views.Dashboard.UserDashboardModel
@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome to RentMate</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center p-4">
                <h5>My Listings</h5>
                <p>View and manage your listed items.</p>
                <a asp-controller="Listings" asp-action="MyListings" class="btn btn-primary">Go</a>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center p-4">
                <h5>Browse Listings</h5>
                <p>Explore available items and services to rent.</p>
                <a asp-controller="Listings" asp-action="Index" class="btn btn-success">Browse</a>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center p-4">
                <h5>My Rentals</h5>
                <p>Track the items you’ve rented or reserved.</p>
                <button class="btn btn-secondary" disabled>Coming Soon</button>
            </div>
        </div>
    </div>
</div>

