@model RentMate.Models.DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">My Dashboard</h2>
        <!-- Message Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

    <div class="row g-4">

        <!-- ====================== MY ITEMS SECTION ====================== -->
        <div class="col-12">
            <div class="card shadow-sm p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4>My Items</h4>
                    <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#createItemForm">
                        + Add Item
                    </button>
                </div>

                <!-- CREATE ITEM FORM -->
                <div class="collapse mt-3" id="createItemForm">
                    <form asp-controller="Items" asp-action="Create" method="post">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Title</label>
                                <input name="Title" class="form-control" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Category</label>
                                <input name="Category" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Price per day (€)</label>
                                <input name="Price" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <textarea name="Description" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Create Item</button>
                        </div>
                    </form>
                </div>

                <hr />

                @if (Model.ListingsOwned?.Any() ?? false)
                {
                    <table class="table table-striped align-middle mt-3">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Price/day</th>
                                <th>Listed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.ListingsOwned)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Price?.ToString("C")</td>
                                <td>@(item.IsListed ? "✅" : "❌")</td>
                                <td>
                                    <button class="btn btn-sm @(item.IsListed ? "btn-warning" : "btn-success")"
                                            onclick="toggleListing(@item.Id, this)">
                                        @(item.IsListed ? "Unlist" : "List")
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#reviewsModal"
                                            data-itemid="@item.Id"
                                            data-title="@item.Title">
                                        View Reviews
                                    </button>
                                    <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="mt-3">You have not listed any items yet.</p>
                }
            </div>
        </div>


        <!-- ====================== RENTALS OF MY ITEMS (OWNER) ====================== -->
        <div class="col-12">
            <div class="card shadow-sm p-4 mb-4">
                <h4 class="mb-3">Rentals of My Items (Owner)</h4>

                @if (Model.OwnerRentals?.Any() ?? false)
                {
                    <table class="table table-bordered align-middle" id="ownerRentalsTable">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Renter</th>
                                <th>Status</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var rental in Model.OwnerRentals)
                        {
                            <tr>
                                <td>@rental.Item?.Title</td>
                                <td>@rental.Renter?.Email</td>
                                <td>@rental.Status</td>
                                <td>@rental.StartDate.ToShortDateString()</td>
                                <td>@rental.EndDate.ToShortDateString()</td>
                                <td>
                                    @if (rental.Status == RentalStatus.Pending)
                                    {
                                        <form asp-controller="Rentals" asp-action="ApproveRental" method="post" class="d-inline">
                                            <input type="hidden" name="rentalId" value="@rental.Id" />
                                            <button class="btn btn-sm btn-success">Approve</button>
                                        </form>
                                        <form asp-controller="Rentals" asp-action="CancelRental" method="post" class="d-inline">
                                            <input type="hidden" name="rentalId" value="@rental.Id" />
                                            <button class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                    }
                                    else if (rental.Status == RentalStatus.Active)
                                    {
                                        <form asp-controller="Rentals" asp-action="CompleteRental" method="post" class="d-inline">
                                            <input type="hidden" name="rentalId" value="@rental.Id" />
                                            <button class="btn btn-sm btn-primary">Mark Complete</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No one has rented your items yet.</p>
                }
            </div>
        </div>


        <!-- ====================== MY RENTALS FROM OTHERS (RENTER) ====================== -->
        <div class="col-12">
            <div class="card shadow-sm p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4>My Rentals from Others (Renter)</h4>
                    <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#createRentalForm">
                        + Request Rental
                    </button>
                </div>

                <!-- REQUEST RENTAL FORM -->
                <div class="collapse mt-3" id="createRentalForm">
                    <form asp-controller="Rentals" asp-action="RequestRental" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Select Item</label>
                                <select class="form-select" name="itemId" required>
                                    <option value="">-- Select --</option>
                                    @if (Model.ListingsOwned != null && Model.ListingsOwned.Any()) 
                                    {
                                        @foreach (var item in Model.ListingsOwned?.Where(i => i.IsListed && !i.IsRented) ?? Enumerable.Empty<RentMate.Models.Item>())
                                        {
                                            <option value="@item.Id">@item.Title (@item.Price?.ToString("C")/day)</option>
                                        }

                                    }
                                    
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Start Date</label>
                                <input type="date" class="form-control" name="startDate" required />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">End Date</label>
                                <input type="date" class="form-control" name="endDate" required />
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Request Rental</button>
                        </div>
                    </form>
                </div>

                <hr />

                @if (Model.MyRentals?.Any() ?? false)
                {
                    <table class="table table-bordered align-middle mt-3" id="myRentalsTable">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Owner</th>
                                <th>Status</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var rental in Model.MyRentals)
                        {
                            <tr>
                                <td>@rental.Item?.Title</td>
                                <td>@rental.Owner?.Email</td>
                                <td>@rental.Status</td>
                                <td>@rental.StartDate.ToShortDateString()</td>
                                <td>@rental.EndDate.ToShortDateString()</td>
                                <td>
                                    @if (rental.Status == RentalStatus.Active)
                                    {
                                        <form asp-controller="Rentals" asp-action="CompleteRental" method="post" class="d-inline">
                                            <input type="hidden" name="rentalId" value="@rental.Id" />
                                            <button class="btn btn-sm btn-primary">Return Item</button>
                                        </form>
                                    }
                                    else if (rental.Status == RentalStatus.Pending)
                                    {
                                        <form asp-controller="Rentals" asp-action="CancelRental" method="post" class="d-inline">
                                            <input type="hidden" name="rentalId" value="@rental.Id" />
                                            <button class="btn btn-sm btn-danger">Cancel Request</button>
                                        </form>
                                    }
                                    else if (rental.Status == RentalStatus.Completed)
                                    {
                                        <button class="btn btn-sm btn-outline-success"
                                                data-bs-toggle="modal"
                                                data-bs-target="#writeReviewModal"
                                                data-itemid="@rental.ItemId"
                                                data-itemtitle="@rental.Item?.Title">
                                            Write Review
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>You have no rentals from other users yet.</p>
                }
            </div>
        </div>

    </div>
    <!-- WRITE REVIEW MODAL -->
    <div class="modal fade" id="writeReviewModal" tabindex="-1" aria-labelledby="writeReviewLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="writeReviewForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="writeReviewLabel">Write a Review</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="ItemId" id="reviewItemId" />
                        <div class="mb-3">
                            <label class="form-label">Rating</label>
                            <div id="reviewStars" class="text-warning fs-4"></div>
                            <input type="hidden" name="Rating" id="reviewRating" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input name="Title" maxlength="200" class="form-control" placeholder="Optional" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Review</label>
                            <textarea name="Body" maxlength="2000" class="form-control" rows="4"
                                    placeholder="Describe your experience"></textarea>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="IsAnonymous" id="reviewAnon">
                            <label class="form-check-label" for="reviewAnon">Post anonymously</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary w-100">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
         // --- SignalR: Listen for live rental requests ---
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/RentMateHub")
            .build();
        
        connection.on("RentalRequested", (data) => {
            console.log("🔔 New rental request:", data);

            showToast(`🔔 New rental request for your item "${data.itemTitle}" from ${data.renterEmail}`, "info");

            // Optionally, add the new rental row dynamically:
            const tableBody = document.querySelector("#ownerRentalsTable tbody");
            if (tableBody) {
                const newRow = document.createElement("tr");
                newRow.innerHTML = `
                    <td>${data.itemTitle}</td>
                    <td>${data.renterEmail}</td>
                    <td><span class="badge bg-warning">${data.status}</span></td>
                    <td>${data.startDate}</td>
                    <td>${data.endDate}</td>
                    <td>
                        <form action="/Rentals/ApproveRental" method="post" class="d-inline">
                            <input type="hidden" name="rentalId" value="${data.rentalId}" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form action="/Rentals/CancelRental" method="post" class="d-inline">
                            <input type="hidden" name="rentalId" value="${data.rentalId}" />
                            <button class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                `;
                tableBody.prepend(newRow);
                newRow.classList.add("flash");
                setTimeout(() => newRow.classList.remove("flash"), 1000);
                bindRentalActionHandlers();
            }
        });


        // --- Toast helper (shared from Rentals page) ---
        function showToast(message, type = 'info') {
            const toastContainerId = 'toastContainer';
            let container = document.getElementById(toastContainerId);
            if (!container) {
                container = document.createElement('div');
                container.id = toastContainerId;
                container.className = 'toast-container position-fixed top-0 end-0 p-3';
                document.body.appendChild(container);
            }

            const toastEl = document.createElement('div');
            toastEl.className = `toast align-items-center text-bg-${type} border-0 show mb-2`;
            toastEl.setAttribute('role', 'alert');
            toastEl.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            container.appendChild(toastEl);

            const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
            toast.show();
            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }
       

        
        const indicator = document.getElementById("connectionIndicator");
        indicator.classList.add("visible");
        function pulseIndicator() {
            indicator.classList.add("flash");
            setTimeout(() => indicator.classList.remove("flash"), 500);
        }

        connection.onreconnected(() => {
            indicator.textContent = "Online";
            indicator.classList.remove("bg-secondary", "bg-warning");
            indicator.classList.add("bg-success");
            pulseIndicator();
            showToast("✅ Connected to live updates", "success");
        });

        connection.onreconnecting(() => {
            indicator.textContent = "Reconnecting...";
            indicator.classList.remove("bg-success", "bg-secondary");
            indicator.classList.add("bg-warning");
            pulseIndicator();
        });

        connection.onclose(() => {
            indicator.textContent = "Offline";
            indicator.classList.remove("bg-success", "bg-warning");
            indicator.classList.add("bg-secondary");
            pulseIndicator();
        });

        connection.start().then(() => {
            indicator.textContent = "Online";
            indicator.classList.remove("bg-secondary");
            indicator.classList.add("bg-success");
            bindRentalActionHandlers();
        }).catch(err => console.error("SignalR connection failed:", err));

        connection.on("RentalStatusChanged", (data) => {
            console.log("📦 Rental status update:", data);

            showToast(data.message, "success");

            // Update the renter's "My Rentals from Others" table
            const table = document.querySelector("#myRentalsTable");
            if (!table) return;

            const row = [...table.querySelectorAll("tr")].find(r =>
                r.innerHTML.includes(data.itemTitle)
            );

            if (row) {
                row.classList.add("flash");
                const statusCell = row.querySelector("td:nth-child(3)");
                if (statusCell) statusCell.innerHTML = `<span class="badge bg-info">${data.newStatus}</span>`;
                setTimeout(() => row.classList.remove("flash"), 1000);
            }
        });

        // --- Handle action buttons (Approve / Reject / Complete) ---
        function bindRentalActionHandlers() {
            document.querySelectorAll('form[action*="Rentals"]').forEach(form => {
                // Skip if already bound
                if (form.dataset.bound === "true") return;
                form.dataset.bound = "true";

                form.addEventListener('submit', async e => {
                    e.preventDefault();
                    const formData = new FormData(form);
                    const action = form.getAttribute('action');
                    const row = form.closest('tr');

                    try {
                        const response = await fetch(action, { method: 'POST', body: formData });
                        if (response.ok) {
                            if (action.includes('ApproveRental')) {
                                updateRow(row, 'Active', 'primary', 'Rental approved.');
                            } else if (action.includes('CancelRental')) {
                                updateRow(row, 'Cancelled', 'secondary', 'Rental cancelled.');
                            } else if (action.includes('CompleteRental')) {
                                updateRow(row, 'Completed', 'success', 'Rental completed.');
                            }
                        } else {
                            const err = await response.text();
                            showToast('❌ Action failed: ' + err, 'danger');
                        }
                    } catch (err) {
                        console.error(err);
                        showToast('❌ Network error performing action.', 'danger');
                    }
                });
            });
        }


        // --- Update the table row visually ---
        function updateRow(row, newStatus, color, toastMessage) {
            const statusCell = row.querySelector('td:nth-child(3)');
            const actionsCell = row.querySelector('td:last-child');

            if (statusCell) {
                statusCell.innerHTML = `<span class="badge bg-${color}">${newStatus}</span>`;
            }
            if (actionsCell) {
                actionsCell.innerHTML = `<span class="text-muted">—</span>`;
            }

            row.classList.add('opacity-75');
            showToast(`✅ ${toastMessage}`, color);
        }

        // --- Toggle listing stays same as before ---
        async function toggleListing(itemId, button) {
            try {
                const res = await fetch(`/Items/ToggleListing/${itemId}`, { method: "POST" });
                if (!res.ok) throw new Error("Failed to toggle listing");

                const data = await res.json();
                const row = button.closest("tr");
                const listedCell = row.querySelector("td:nth-child(3)");
                const isListed = data.isListed === true || data.isListed === "true";

                if (data.success) {
                    if (isListed) {
                        button.classList.remove("btn-success");
                        button.classList.add("btn-warning");
                        button.textContent = "Unlist";

                        if (listedCell) listedCell.textContent = "✅";

                        showToast("✅ Item listed successfully!", "success");
                        row.classList.add("flash");
                        setTimeout(() => row.classList.remove("flash"), 1000);
                    } else {
                        button.classList.remove("btn-warning");
                        button.classList.add("btn-success");
                        button.textContent = "List";

                        if (listedCell) listedCell.textContent = "❌";

                        showToast("🔕 Item unlisted.", "secondary");
                    }
                } else {
                    showToast("❌ Could not update listing status.", "danger");
                }
            } catch (err) {
                console.error(err);
                showToast("❌ Network error while updating listing.", "danger");
            }
        }
    </script>
    <script>
document.addEventListener("DOMContentLoaded", function () {
    const modalEl = document.getElementById('writeReviewModal');
    const starsContainer = document.getElementById("reviewStars");
    const ratingInput = document.getElementById("reviewRating");

    // ⭐ Build stars dynamically (only when modal is shown)
    function buildStars() {
        if (!starsContainer) return;
        starsContainer.innerHTML = "";
        for (let i = 1; i <= 5; i++) {
            const star = document.createElement("i");
            star.className = "bi bi-star"; // ✅ Bootstrap icons, no CDN needed
            star.dataset.value = i;
            star.style.cursor = "pointer";
            star.addEventListener("mouseenter", () => highlightStars(i));
            star.addEventListener("mouseleave", () => highlightStars(ratingInput.value || 0));
            star.addEventListener("click", () => {
                ratingInput.value = i;
                highlightStars(i);
            });
            starsContainer.appendChild(star);
        }
        highlightStars(0);
    }

    function highlightStars(val) {
        starsContainer.querySelectorAll("i").forEach((s, idx) => {
            s.className = idx < val
                ? "bi bi-star-fill text-warning"
                : "bi bi-star text-muted";
        });
    }

    // Build stars *only when the modal is shown*
    modalEl.addEventListener("shown.bs.modal", event => {
        const btn = event.relatedTarget;
        const itemId = btn.getAttribute("data-itemid");
        const title = btn.getAttribute("data-itemtitle");

        document.getElementById("writeReviewLabel").textContent = `Review: ${title}`;
        document.getElementById("reviewItemId").value = itemId;
        ratingInput.value = 0;
        buildStars();
    });

    // Submit handler stays same
    document.getElementById("writeReviewForm").addEventListener("submit", async e => {
        e.preventDefault();
        const formData = Object.fromEntries(new FormData(e.target).entries());
        formData.Rating = parseInt(formData.Rating);

        const res = await fetch(`/api/Reviews`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(formData)
        });

        if (res.ok) {
            const modalInstance = bootstrap.Modal.getInstance(modalEl);
            if (modalInstance) modalInstance.hide();

            // explicit cleanup after hide
            setTimeout(() => {
                document.body.classList.remove("modal-open");
                const backdrop = document.querySelector(".modal-backdrop");
                if (backdrop) backdrop.remove();
            }, 400);

            e.target.reset();
            ratingInput.value = 0;
            highlightStars(0);
            showToast("✅ Review posted successfully!", "success");
        }

else {
            const text = await res.text();
            showToast(`❌ ${text}`, "danger");
        }
    });
});

</script>

    <!-- Reviews Modal -->
    <div class="modal fade" id="reviewsModal" tabindex="-1" aria-labelledby="reviewsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reviewsModalLabel">Reviews</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="reviewsModalBody">
                    <div class="text-center text-muted">Loading...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
    document.getElementById('reviewsModal')
.addEventListener('show.bs.modal', async event => {
    const button = event.relatedTarget;
    const itemId = button.getAttribute('data-itemid');
    const title  = button.getAttribute('data-title');
    const modalTitle = document.getElementById('reviewsModalLabel');
    const modalBody  = document.getElementById('reviewsModalBody');

    modalTitle.textContent = `Reviews for "${title}"`;
    modalBody.innerHTML = `<div class="text-center text-muted p-3">Loading reviews...</div>`;

    try {
        const res = await fetch(`/api/Reviews/item/${itemId}?page=1&pageSize=20`);
        if (!res.ok) throw new Error(await res.text());
        const data = await res.json();

        modalBody.innerHTML = "";
        if (!data.reviews?.length) {
            modalBody.innerHTML = `<div class="text-center text-muted p-3">No reviews yet.</div>`;
            return;
        }

        data.reviews.forEach(r => {
            const stars = Array.from({ length: 5 }, (_, i) =>
                `<i class="fa${i < r.rating ? 's' : 'r'} fa-star text-warning"></i>`
            ).join("");

            const block = document.createElement("div");
            block.className = "border-bottom pb-3 mb-3";
            block.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <strong>${r.isAnonymous ? "Anonymous" : (r.reviewer?.userName ?? "User")}</strong>
                    <span>${stars}</span>
                </div>
                ${r.title ? `<div class="fw-bold mt-1">${r.title}</div>` : ""}
                ${r.body ? `<p class="mb-0 mt-1">${r.body}</p>` : ""}
                <small class="text-muted">${new Date(r.createdAt).toLocaleString()}</small>
            `;
            modalBody.appendChild(block);
        });
    } catch (err) {
        console.error(err);
        modalBody.innerHTML = `<div class="text-danger text-center p-3">Failed to load reviews.</div>`;
    }
});

    </script>

}







