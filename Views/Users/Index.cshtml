@model IEnumerable<RentMate.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}



<div class="container mt-5">
    <h2 class="mb-4 text-center">User Management</h2>

    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="usersTable">
            @foreach (var user in Model)
            {
                <tr data-user-id="@user.Id">
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td class="user-roles text-muted">Loading...</td>
                    <td>
                        <button class="btn btn-sm btn-primary" onclick="openRoleModal('@user.Id', '@user.UserName')">
                            Manage Roles
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-labelledby="roleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow-lg">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="roleModalLabel">Manage Roles</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div id="rolesCheckboxList" class="mb-3"></div>

        <div class="d-flex justify-content-end">
            <button class="btn btn-primary" type="button" onclick="saveRoles()">Save Changes</button>
        </div>

      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<script>
let currentUserId = null;
let modalInstance = null;

document.addEventListener("DOMContentLoaded", async () => {
    await loadRolesForAllUsers();
    modalInstance = new bootstrap.Modal(document.getElementById('roleModal'));
});

async function loadRolesForAllUsers() {
    document.querySelectorAll("#usersTable tr").forEach(async row => {
        const userId = row.getAttribute("data-user-id");
        const rolesCell = row.querySelector(".user-roles");

        try {
            const res = await fetch(`/api/UsersApi/${userId}/roles`);
            const roles = await res.json();
            rolesCell.innerHTML = roles.length ? roles.join(", ") : "<i>No roles</i>";
        } catch {
            rolesCell.innerText = "Error loading roles";
        }
    });
}

async function openRoleModal(userId, userName) {
    currentUserId = userId;
    document.getElementById("roleModalLabel").innerText = `Manage Roles for ${userName}`;
    await loadCheckboxRoles();
    modalInstance.show();
}

// ✅ Load all available roles and mark user's current ones
async function loadCheckboxRoles() {
    const [allRolesRes, userRolesRes] = await Promise.all([
        fetch('/api/UsersApi/roles'),
        fetch(`/api/UsersApi/${currentUserId}/roles`)
    ]);

    const allRoles = await allRolesRes.json();
    const userRoles = await userRolesRes.json();

    const container = document.getElementById("rolesCheckboxList");
    container.innerHTML = allRoles.map(role => `
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="${role}" id="role-${role}" ${userRoles.includes(role) ? "checked" : ""}>
            <label class="form-check-label" for="role-${role}">
                ${role}
            </label>
        </div>
    `).join("");
}

// ✅ Save roles: sends all checked roles to backend
async function saveRoles() {
    const selectedRoles = Array.from(document.querySelectorAll("#rolesCheckboxList input:checked"))
        .map(cb => cb.value);

    const res = await fetch(`/api/UsersApi/${currentUserId}/roles/manage`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(selectedRoles)
    });

    if (res.ok) {
        modalInstance.hide();
        await loadRolesForAllUsers();
    } else {
        alert("Error saving roles");
    }
}
</script>
}

